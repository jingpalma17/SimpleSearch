{
  "compilerOptions": {
    "jsx": "react",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "target": "es6",
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "./wwwroot/ts",
    "lib": ["dom", "es2018"],
    "skipLibCheck": true,
    "module": "esnext"
  },
  "compileOnSave": true,
  "exclude": ["node_modules"],
  "include": ["./Typescript/**/*.ts", "./Typescript/**/*.tsx"]
}
